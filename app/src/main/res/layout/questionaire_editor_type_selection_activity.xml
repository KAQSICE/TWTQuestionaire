<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="400dp">

    <include
        android:id="@+id/questionaire_editor_type_selection_toolbar"
        layout="@layout/common_toolbar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/questionaire_editor_type_selection_set"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/questionaire_editor_type_selection_import"
        app:layout_constraintTop_toBottomOf="@id/questionaire_editor_type_selection_toolbar">

        <androidx.cardview.widget.CardView
            android:id="@+id/questionaire_editor_type_selection_single"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/main_card_background"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:layout_constraintBottom_toTopOf="@id/questionaire_editor_type_selection_paragraph"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/questionaire_editor_type_selection_multiple"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/questionaire_editor_type_selection_single"
                android:textColor="@color/main_text"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/questionaire_editor_type_selection_multiple"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/main_card_background"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:layout_constraintBottom_toTopOf="@id/questionaire_editor_type_selection_score"
            app:layout_constraintLeft_toRightOf="@id/questionaire_editor_type_selection_single"
            app:layout_constraintRight_toLeftOf="@id/questionaire_editor_type_selection_blank"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/questionaire_editor_type_selection_single"
                android:textColor="@color/main_text"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/questionaire_editor_type_selection_blank"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/main_card_background"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:layout_constraintBottom_toTopOf="@id/questionaire_editor_type_selection_sort"
            app:layout_constraintLeft_toRightOf="@id/questionaire_editor_type_selection_multiple"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/questionaire_editor_type_selection_single"
                android:textColor="@color/main_text"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/questionaire_editor_type_selection_paragraph"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/main_card_background"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/questionaire_editor_type_selection_score"
            app:layout_constraintTop_toBottomOf="@id/questionaire_editor_type_selection_single">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/questionaire_editor_type_selection_single"
                android:textColor="@color/main_text"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/questionaire_editor_type_selection_score"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/main_card_background"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/questionaire_editor_type_selection_paragraph"
            app:layout_constraintRight_toLeftOf="@id/questionaire_editor_type_selection_sort"
            app:layout_constraintTop_toBottomOf="@id/questionaire_editor_type_selection_multiple">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/questionaire_editor_type_selection_single"
                android:textColor="@color/main_text"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/questionaire_editor_type_selection_sort"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/main_card_background"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/questionaire_editor_type_selection_score"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/questionaire_editor_type_selection_blank">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/questionaire_editor_type_selection_single"
                android:textColor="@color/main_text"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/questionaire_editor_type_selection_import"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/main_card_background"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/questionaire_editor_type_selection_set">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:text="@string/questionaire_editor_type_selection_single"
            android:textColor="@color/main_text"
            android:textSize="20sp" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>