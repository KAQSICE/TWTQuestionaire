<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:paddingVertical="7dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/paragraph_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25.5dp"
                android:layout_marginVertical="21.5dp"
                android:textColor="@color/md_black_1000"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/paragraph_item_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12.5dp"
                android:text="编辑"
                android:textColor="@color/twt_blue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/paragraph_item_input_et" />

            <EditText
                android:id="@+id/paragraph_item_input_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="33.5dp"
                android:layout_marginVertical="21.5dp"
                android:autofillHints="@null"
                android:background="@drawable/edit_text_selector"
                android:gravity="top"
                android:hint="@null"
                android:inputType="textMultiLine"
                android:minLines="6"
                app:layout_constraintTop_toBottomOf="@id/paragraph_text" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

