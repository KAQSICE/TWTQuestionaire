<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="29dp"
    android:layout_marginVertical="9dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/paper_card">

            <TextView
                android:id="@+id/star_paper_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="17.5dp"
                app:layout_constraintBottom_toTopOf="@id/star_paper_item_state"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/star_paper_item_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/star_paper_item_state_icon"
                app:layout_constraintLeft_toRightOf="@id/star_paper_item_state_icon"
                app:layout_constraintTop_toTopOf="@id/star_paper_item_state_icon" />

            <ImageView
                android:id="@+id/star_paper_item_state_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17.5dp"
                android:layout_marginTop="18.5dp"
                android:layout_marginBottom="17dp"
                android:contentDescription="@null"
                android:src="@drawable/green_indicator"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintLeft_toRightOf="@id/star_paper_item_state"
                app:layout_constraintTop_toBottomOf="@id/star_paper_item_title" />

            <View
                android:id="@+id/star_paper_item_view"
                android:layout_width="1.5dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="11.5dp"
                android:background="@color/twt_blue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/star_paper_item_count_text"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/star_paper_item_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="答卷数量"
                app:layout_constraintBottom_toBottomOf="@id/star_paper_item_state_icon"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/star_paper_item_state_icon" />

            <TextView
                android:id="@+id/star_paper_item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="38.5dp"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/star_paper_item_title"
                app:layout_constraintLeft_toLeftOf="@id/star_paper_item_count_text"
                app:layout_constraintRight_toRightOf="@id/star_paper_item_count_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>