<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".questionaire.editor.ParagraphEditor">

    <include
        android:id="@+id/q1_e_paragraph_toolbar"
        layout="@layout/common_toolbar" />

    <TextView
        android:id="@+id/q1_e_paragraph_appearance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:text="@string/q1_e_single_appearance_text"
        android:textColor="@color/main_text"
        android:textSize="@dimen/new_questionaire_text_size"
        app:layout_constraintBottom_toTopOf="@id/q1_e_paragraph_appearance_set"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/q1_e_paragraph_toolbar" />

    <androidx.cardview.widget.CardView
        android:id="@+id/q1_e_paragraph_appearance_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/q1_e_paragraph_appearance_text">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/q1_e_paragraph_input_question_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/little_star"
                android:textColor="@color/md_red_800"
                android:textSize="@dimen/new_questionaire_text_size"
                app:layout_constraintBottom_toBottomOf="@id/q1_e_paragraph_input_question"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/q1_e_paragraph_input_question"
                app:layout_constraintTop_toTopOf="@id/q1_e_paragraph_input_question" />

            <EditText
                android:id="@+id/q1_e_paragraph_input_question"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/edit_text_selector"
                android:hint="@string/q1_e_single_input_question"
                android:importantForAutofill="no"
                android:inputType="text"
                android:padding="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/q1_e_paragraph_more_settings_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        android:layout_marginVertical="11.5dp"
        android:text="@string/q1_e_more_settings_text"
        android:textColor="@color/main_text"
        android:textSize="@dimen/new_questionaire_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/q1_e_paragraph_appearance_set" />

    <androidx.cardview.widget.CardView
        android:id="@+id/q1_e_paragraph_more_settings_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="3dp"
        app:layout_constraintTop_toBottomOf="@id/q1_e_paragraph_more_settings_text">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="14dp">

            <TextView
                android:id="@+id/q1_e_paragraph_compulsion_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:text="@string/q1_e_single_compulsion_text"
                android:textColor="@color/main_text"
                android:textSize="@dimen/new_questionaire_text_size"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Switch
                android:id="@+id/q1_e_paragraph_compulsion_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                android:thumb="@drawable/switch_thumb"
                app:layout_constraintBottom_toBottomOf="@id/q1_e_paragraph_compulsion_text"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/q1_e_paragraph_compulsion_text" />

            <TextView
                android:id="@+id/q1_e_paragraph_answer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:text="@string/q1_e_single_answer_text"
                android:textSize="@dimen/new_questionaire_text_size"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/q1_e_paragraph_compulsion_text" />

            <TextView
                android:id="@+id/q1_e_paragraph_answer_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                android:drawableEnd="@mipmap/editor_arrow"
                android:drawablePadding="5dp"
                android:text="@string/q1_e_unsettled"
                android:textColor="#CCC"
                android:textSize="@dimen/new_questionaire_text_size"
                app:layout_constraintBottom_toBottomOf="@id/q1_e_paragraph_answer_text"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/q1_e_paragraph_answer_text" />

            <TextView
                android:id="@+id/q1_e_paragraph_score_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:text="@string/q1_e_single_score_text"
                android:textSize="@dimen/new_questionaire_text_size"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/q1_e_paragraph_answer_text" />

            <TextView
                android:id="@+id/q1_e_paragraph_score_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                android:drawableEnd="@mipmap/editor_arrow"
                android:drawablePadding="5dp"
                android:text="@string/q1_e_unsettled"
                android:textColor="#CCC"
                android:textSize="@dimen/new_questionaire_text_size"
                app:layout_constraintBottom_toBottomOf="@id/q1_e_paragraph_score_text"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/q1_e_paragraph_score_text" />

            <TextView
                android:id="@+id/q1_e_paragraph_condition_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:text="@string/q1_e_single_condition_text"
                android:textColor="@color/main_text"
                android:textSize="@dimen/new_questionaire_text_size"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/q1_e_paragraph_score_text" />

            <TextView
                android:id="@+id/q1_e_paragraph_condition_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                android:drawableEnd="@mipmap/editor_arrow"
                android:drawablePadding="5dp"
                android:text="@string/q1_e_unsettled"
                android:textColor="#CCC"
                android:textSize="@dimen/new_questionaire_text_size"
                app:layout_constraintBottom_toBottomOf="@id/q1_e_paragraph_condition_text"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/q1_e_paragraph_condition_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/q1_e_paragraph_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:text="创建"
        android:textColor="#FFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/q1_e_paragraph_more_settings_set" />

</androidx.constraintlayout.widget.ConstraintLayout>