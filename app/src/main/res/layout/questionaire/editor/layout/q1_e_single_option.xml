<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/q1_e_single_option_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/q1_e_single_option_edit"
        android:importantForAutofill="no"
        android:inputType="text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/q1_e_single_delete"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/q1_e_single_delete"
        android:layout_width="@dimen/alerter_alert_icn_size"
        android:layout_height="@dimen/alerter_alert_icn_size"
        android:contentDescription="@null"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintLeft_toRightOf="@id/q1_e_single_option_edit_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>