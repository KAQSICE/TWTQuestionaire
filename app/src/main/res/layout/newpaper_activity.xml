<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newpaper.NewpaperActivity">

    <include
        android:id="@+id/newpaperToolbar"
        layout="@layout/common_toolbar" />

    <TextView
        android:id="@+id/newpaperTitleLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/newpaperToolbar" />

    <EditText
        android:id="@+id/newpaperTitleEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="8dp"
        android:background="@drawable/edit_text_selector"
        android:elevation="5dp"
        android:importantForAutofill="no"
        android:inputType="text"
        android:padding="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/newpaperTitleLabel"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/newpaperDescriptionLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/newpaperTitleEditText" />

    <EditText
        android:id="@+id/newpaperDescriptionEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="8dp"
        android:background="@drawable/edit_text_selector"
        android:elevation="5dp"
        android:importantForAutofill="no"
        android:inputType="text"
        android:padding="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/newpaperDescriptionLabel"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/newpaperBeginLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/newpaperDescriptionEditText" />

    <EditText
        android:id="@+id/newpaperBeginEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="8dp"
        android:background="@drawable/edit_text_selector"
        android:elevation="5dp"
        android:importantForAutofill="no"
        android:inputType="text"
        android:padding="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/newpaperBeginLabel"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/newpaperEndLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/newpaperBeginEditText" />

    <EditText
        android:id="@+id/newpaperEndEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="8dp"
        android:background="@drawable/edit_text_selector"
        android:elevation="5dp"
        android:importantForAutofill="no"
        android:inputType="text"
        android:padding="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/newpaperEndLabel"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/newpaperButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="86dp"
        android:layout_marginVertical="27.5dp"
        android:background="@drawable/button_shape"
        android:elevation="5dp"
        android:textColor="#FFF"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/newpaperEndEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>