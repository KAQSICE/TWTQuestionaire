<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="19dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="26dp">

            <ImageView
                android:id="@+id/paperlistHeaderQuestionnaire"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@mipmap/questionnaire"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/paperlistHeaderQuiz"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/paperlistHeaderQuestionnaireLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:text="@string/questionnaire"
                android:textColor="#000"
                app:layout_constraintLeft_toLeftOf="@id/paperlistHeaderQuestionnaire"
                app:layout_constraintRight_toRightOf="@id/paperlistHeaderQuestionnaire"
                app:layout_constraintTop_toBottomOf="@id/paperlistHeaderQuestionnaire" />

            <ImageView
                android:id="@+id/paperlistHeaderQuiz"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@null"
                android:src="@mipmap/quiz"
                app:layout_constraintBottom_toBottomOf="@id/paperlistHeaderQuestionnaire"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintLeft_toRightOf="@id/paperlistHeaderQuestionnaire"
                app:layout_constraintRight_toLeftOf="@id/paperlistHeaderVote"
                app:layout_constraintTop_toTopOf="@id/paperlistHeaderQuestionnaire" />

            <TextView
                android:id="@+id/paperlistHeaderQuizLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:text="@string/quiz"
                android:textColor="#000"
                app:layout_constraintLeft_toLeftOf="@id/paperlistHeaderQuiz"
                app:layout_constraintRight_toRightOf="@id/paperlistHeaderQuiz"
                app:layout_constraintTop_toBottomOf="@id/paperlistHeaderQuiz" />

            <ImageView
                android:id="@+id/paperlistHeaderVote"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@null"
                android:src="@mipmap/vote"
                app:layout_constraintBottom_toBottomOf="@id/paperlistHeaderQuestionnaire"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintLeft_toRightOf="@id/paperlistHeaderQuiz"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/paperlistHeaderQuestionnaire" />

            <TextView
                android:id="@+id/paperlistHeaderVoteLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:text="@string/vote"
                android:textColor="#000"
                app:layout_constraintLeft_toLeftOf="@id/paperlistHeaderVote"
                app:layout_constraintRight_toRightOf="@id/paperlistHeaderVote"
                app:layout_constraintTop_toBottomOf="@id/paperlistHeaderVote" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>