<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".participated.ParticipatedActivity">

    <include
        android:id="@+id/participated_toolbar"
        layout="@layout/common_toolbar" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/participated_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/participated_toolbar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/participated_button_chain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/participated_search">

        <ImageView
            android:id="@+id/participated_q1_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@mipmap/questionaire"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/participated_v_button"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/participated_v_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@mipmap/vote"
            app:layout_constraintLeft_toRightOf="@id/participated_q1_button"
            app:layout_constraintRight_toLeftOf="@id/participated_q2_button"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/participated_q2_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@mipmap/quiz"
            app:layout_constraintLeft_toRightOf="@id/participated_v_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/participated_paper_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/participated_button_chain" />

</androidx.constraintlayout.widget.ConstraintLayout>