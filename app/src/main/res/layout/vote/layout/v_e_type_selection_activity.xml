<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/questionaire_editor_type_selection_toolbar"
        layout="@layout/common_toolbar" />

    <androidx.cardview.widget.CardView
        android:id="@+id/v_e_type_selection_single"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="23dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/questionaire_editor_type_selection_toolbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="18dp"
            android:text="@string/q1_e_type_selection_single"
            android:textSize="15sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/v_e_type_selection_multiple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="23dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/v_e_type_selection_single">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="18dp"
            android:text="@string/q1_e_type_selection_multiple"
            android:textSize="15sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/v_e_type_selection_blank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="23dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/v_e_type_selection_multiple">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="18dp"
            android:text="@string/q1_e_type_selection_blank"
            android:textSize="15sp" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/v_e_type_selection_import"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="86dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/button_shape"
        android:paddingHorizontal="64dp"
        android:text="@string/q1_e_type_selection_import"
        android:textColor="#FFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_e_type_selection_blank"
        tools:layout_editor_absoluteY="543dp" />

</androidx.constraintlayout.widget.ConstraintLayout>